<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorActivity"
    tools:context="com.example.mamdouhembabi.homeautomation.Control">

    <ToggleButton
        android:id="@+id/switch1"
        android:layout_width="80px"
        android:layout_height="80px"
        android:visibility="visible"
        android:background="@drawable/check"
        android:textOn=""
        android:textOff=""
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:id="@+id/switch2"
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/check"
        android:textOn=""
        android:textOff=""
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:layout_marginTop="40dp" />

    <ToggleButton
        android:id="@+id/switch3"

        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/check"
        android:textOn=""
        android:textOff=""
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp" />

    <ToggleButton
        android:id="@+id/switch4"
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/check"
        android:textOn=""
        android:textOff=""
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp" />

    <ToggleButton
        android:id="@+id/switch5"

        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/check"
        android:textOn=""
        android:textOff=""
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp" />

    <ToggleButton
        android:id="@+id/switch6"
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/check"
        android:textOn=""
        android:textOff=""
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textSize="40px"
        android:textColor="@color/colorTextView"
        android:id="@+id/textView5"
        android:visibility="visible"
        android:layout_above="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:textColor="@color/colorTextView"
        android:text="Large Text"
        android:id="@+id/textView6"
        android:visibility="visible"
        android:layout_alignBottom="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:textColor="@color/colorTextView"
        android:text="Large Text"
        android:id="@+id/textView7"
        android:visibility="visible"
        android:layout_alignBottom="@+id/switch3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:textColor="@color/colorTextView"
        android:text="Large Text"
        android:id="@+id/textView8"
        android:visibility="visible"
        android:layout_alignBottom="@+id/switch4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:textColor="@color/colorTextView"
        android:text="Large Text"
        android:id="@+id/textView9"
        android:visibility="visible"
        android:layout_alignBottom="@+id/switch5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:textColor="@color/colorTextView"
        android:text="Large Text"
        android:id="@+id/textView10"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="870px"
        android:layout_toLeftOf="@+id/switch6"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="150px"
        android:layout_height="150px"
        android:id="@+id/automatic"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/auto"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/disconnect"
        android:id="@+id/dis"
        android:onClick="dis"
        android:layout_marginTop="800px"
        android:layout_marginLeft="600px"
         />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_door"
        android:background="@drawable/opendoor"
        android:onClick="open"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/automatic"
        android:layout_alignStart="@+id/automatic" />

    <ImageButton
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/button2"
        android:layout_marginTop="660px"
        android:background="@drawable/config"
        android:onClick="configurations"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

</RelativeLayout>
