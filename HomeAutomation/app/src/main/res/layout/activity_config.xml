<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorActivity"
    tools:context="com.example.mamdouhembabi.homeautomation.Config">

<ImageView
    android:layout_width="125px"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20px"
    android:id="@+id/lamp"
    android:src="@drawable/lamp"
    />
    <ImageView
        android:layout_width="125px"
        android:layout_height="wrap_content"
        android:id="@+id/door"
        android:src="@drawable/door"
        android:layout_alignBottom="@+id/lamp"
        android:layout_toRightOf="@+id/lamp"
        android:layout_toEndOf="@+id/lamp" />
    <ImageView
        android:layout_width="125px"
        android:layout_height="wrap_content"
        android:id="@+id/laptop"
        android:src="@drawable/laptop"
        android:layout_alignBottom="@+id/door"
        android:layout_toRightOf="@+id/door"
        android:layout_toEndOf="@+id/door"

        />
    <ImageView
        android:layout_width="125px"
        android:layout_height="wrap_content"
        android:id="@+id/garage"
        android:src="@drawable/garage"
        android:layout_alignBottom="@+id/laptop"
        android:layout_toRightOf="@+id/laptop"
        android:layout_toEndOf="@+id/laptop"
        />
    <ImageView
        android:layout_width="125px"
        android:layout_height="wrap_content"
        android:id="@+id/fan"
        android:src="@drawable/fan"
        android:layout_alignBottom="@+id/garage"
        android:layout_toRightOf="@+id/garage"
        android:layout_toEndOf="@+id/garage"
        />
    <EditText
        android:id="@+id/noOf"
        android:layout_width="600px"
        android:layout_height="80px"
        android:hint="Number of devices"
        android:textColorHint="@color/colorHint"
        android:autoText="false"
        android:layout_marginTop="320px"
        android:layout_marginLeft="2px"
        android:background="@drawable/edittext"
        android:ems="10"
        android:enabled="true"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLimit"
        android:text="Max is 6"
        android:textSize="30px"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/noOf"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="100px"
        android:layout_height="100px"
        android:onClick="ok"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/next"
        android:layout_below="@+id/noOf"
        android:layout_alignRight="@+id/laptop"
        android:layout_alignEnd="@+id/laptop"
        android:layout_marginTop="116dp" />


</RelativeLayout>
